<Window x:Class="MouseData.Draw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Icon="icon.ico" MinHeight="200" MinWidth="300">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Disabled"
                      HorizontalAlignment="Left" Margin="0,0,0,0" Width="100">
            <ScrollViewer.Content>
                <StackPanel Name="filter" Orientation="Vertical"/>
            </ScrollViewer.Content>
        </ScrollViewer>
        <ScrollViewer  HorizontalAlignment="Stretch" Margin="100,0,0,0" VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto" Name="MainView">
            <Canvas Name="MainCanvas" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </ScrollViewer>

    </Grid>
</Window>
